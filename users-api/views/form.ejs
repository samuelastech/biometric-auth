        <div class="forms-container">
            <div class="signup-signin">
                <form method="POST" action="/login" enctype="multipart/form-data" class="signin-form">
                    <h2 class="title">Sign in</h2>
                    <input type="file" name="fingerprint">
                    <input type="submit" value="Login" class="button solid">
                </form>

                <form method="POST" action="/login" enctype="multipart/form-data" class="signup-form">
                    <h2 class="title">Sign up</h2>

                    <div class="input-field">
                        <i class="lni lni-pencil icon"></i>
                        <input type="text" name="name" placeholder="Name" class="input">
                    </div>
                    
                    <div class="input-field">
                        <i class="lni lni-user icon"></i>
                        <input type="text" name="username" placeholder="Username" class="input">
                    </div>
                    
                    <div class="input-field">
                        <i class="lni lni-envelope icon"></i>
                        <input type="email" name="email" placeholder="Email" class="input">
                    </div>

                    <div class="input-field">
                        <i class="lni lni-lock-alt icon"></i>
                        <input type="password" name="password" placeholder="Password" class="input">
                    </div>

                    <input type="submit" value="Sign up" class="button solid">
                </form>
            </div>
        </div>

